{
    "name": "@lesh/go2-webrtc-deno",
    "version": "0.0.1",
    "exports": "./src/core.ts",
    "nodeModulesDir": "auto",
    "tasks": {
        "test": "deno run -A src/examples/test.ts",
        "check": "deno lint --fix && deno fmt && deno check src/mod.ts"
    },
    "imports": { "eventemitter2": "npm:eventemitter2@^6.4.9" },
    "lint": {
        "rules": {
            "exclude": [
                "require-await",
                "ban-ts-comment",
                "no-explicit-any",
                "ban-types"
            ]
        },
        "exclude": ["src/connection/signaling/AES.ts"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false
    },

    "compilerOptions": {
        "lib": ["dom", "deno.ns"]
    },
    "license": "MIT"
    
}
